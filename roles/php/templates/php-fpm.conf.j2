;;;;;;;;;;;;;;;;;;;;;
; FPM Configuration ;
;;;;;;;;;;;;;;;;;;;;;

pid = {{ php_fpm_socket_dir }}/php5-fpm.pid
error_log = {{php_fpm_log_dir}}/php5-fpm.log
log_level = warning
daemonize = yes

[www]
user = {{ web_user }}
group = {{ web_user }}
listen = {{ php_fpm_socket_dir }}/php5-fpm.sock
listen.owner = {{ web_user }}
listen.group = {{ web_user }}
listen.mode = 0660
pm = dynamic
pm.max_children = 5
pm.start_servers = 2
pm.min_spare_servers = 1
pm.max_spare_servers = 3
