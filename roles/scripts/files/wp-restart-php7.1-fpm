#!/bin/bash
##
# Gives user easy way to restart nginx
##

# Stop on errors
set -e

# Source environment if doesn't exist yet
if [ -z $PS1 ]; then
  source /etc/container_environment.sh
fi

# Need to run as root
if [ "$(id -u)" != "0" ]; then
   exec sudo /usr/local/bin/wp-restart-php7.1-fpm
   exit 0
fi

echo "restarting php7.1-fpm..."
service php7.1-fpm restart
