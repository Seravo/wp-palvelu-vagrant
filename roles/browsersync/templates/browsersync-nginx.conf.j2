##
# Admin panel for browsersync
##

server {
  # listen any domain starting with 'browsersync.'
  listen 80;
  listen 443 ssl;
  server_name browsersync.*;

  # Disable stupid error log lines when there's no favicon
  log_not_found off;

  # Proxy browsersync. domain into localport 1338
  # Remember to support websockets
  location / {
    proxy_pass http://127.0.0.1:1338;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}